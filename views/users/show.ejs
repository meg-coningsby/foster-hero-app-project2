<%- include('../partials/header') %>
<h1><%= user.name %></h1>
<ul class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/users">All Foster Carers</a></li>
    <li><%= user.name %></li>
</ul>
<section id="user-show-page">
    <div class="show-user-details">
        <div class="show-user-image">
            <img src="<%= user.avatar %>" />
        </div>
        <div>
            <strong>Role:</strong>
            <%= user.role %>
        </div>
        <div>
            <strong>Status: </strong>
            <%= user.status %>
        </div>
    </div>
    <% if (user._id.toString()===loggedInUserId.toString() || loggedInUserRole === 'Admin') { %>
    <div class="show-user-buttons">
        <div>
            <a href="/users/<%= user._id %>/edit" class="button-link-main"
                >EDIT / UPDATE DETAILS</a
            >
        </div>
        <div>
            <form method="POST" action="/users/<%= user._id %>?_method=DELETE">
                <input
                    id="user-delete"
                    type="submit"
                    name="user"
                    value="REMOVE <%= user.name %>"
                    class="form-input-button"
                />
            </form>
        </div>
    </div>
    <% } else { %>
    <h5>Not allowed to edit this user</h5>
    <% } %>
    <hr />
    <div class="show-user-cats">
        <h3>Cats In Care & Up For Adoption</h3>
        <% if (catsInCare.length) { %>
        <table id="show-list">
            <thead>
                <tr>
                    <th>Cat</th>
                    <th>Health Status</th>
                    <th>Age</th>
                    <th>Colour</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% catsInCare.forEach(function(c) { %>
                <tr>
                    <td>
                        <a href="/cats/<%= c._id %>"
                            ><img
                                src="<%= c.image %>"
                                class="user-cat-image" /></a
                        ><br />
                        <a href="/cats/<%= c._id %>"> <%= c.name %> </a>
                    </td>
                    <td><%= c.healthStatus %></td>
                    <td><%= c.age %></td>
                    <td><%= c.colour %></td>
                    <td><%= c.status %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <h5>No Cats Yet</h5>
        <% } %>
    </div>
</section>

<%- include('../partials/footer') %>
