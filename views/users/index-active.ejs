<%- include('../partials/header') %>
    <h1>ACTIVE FOSTER CARERS</h1>
    <ul class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li>All Foster Carers</li>
    </ul>
    <div class="filtering-links">
        <a href="/users" class="button-link-main">ALL</a>
        <a href="/users/active" class="button-link-main active-filter">ACTIVE</a>
        <a href="/users/inactive" class="button-link-main">INACTIVE</a>
    </div>
    <table id="show-list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(u) { %>
                <tr>
                    <td><a href="/users/<%= u._id %>">
                            <%= u.name %>
                        </a></td>
                    <td>
                        <%= u.status %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>